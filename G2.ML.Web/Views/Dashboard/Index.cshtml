
@{
	ViewBag.Title = "Dashboard";
}
@section scripts {
	@Scripts.Render("~/bundles/charts")
	<script>
		$(document).ready(function () {
			DashboardInit();
		});
	</script>
}

<div class="row">
	<div class="col-md-12">
		<ul class="nav nav-tabs">
			<li class="active"><a href="#sale" data-toggle="tab" data-fn="loadSaleTab">Sale</a></li>
			<li><a href="#payments" data-toggle="tab" data-fn="loadPaymentsTab">Payments</a></li>
			<li><a href="#brokerage" data-toggle="tab" data-fn="loadBrokerageTab">Brokerage</a></li>
			<li><a href="#sample" data-toggle="tab" data-fn="loadSampleTab">Sample</a></li>
		</ul>
		<div class="tab-content">
			<div id="sale" class="tab-pane fade in active">
				<div id="divSaleChart" data-chart="1" data-loaded="0" data-ch-idx="1" data-ch-opt="_saleChartOptions">
					Chart is loading...
				</div>
			</div>
			<div id="payments" class="tab-pane fade">
				<br />
				<div id="divDuePayments" data-list="1" data-loaded="0" data-fn="NavPageDuePayments(1, 10)"></div>				
			</div>
			<div id="brokerage" class="tab-pane fade">
				<div id="divBrokerageChart" data-chart="1" data-loaded="0" data-ch-idx="2" data-ch-opt="_brokChartOptions">
					Chart is loading...
				</div>
			</div>
			<div id="sample" class="tab-pane fade">
				<h3>Sample</h3>
				<p>Some content in menu 2.</p>
			</div>
		</div>
	</div>
</div>