@using G2.ML.Web.Infrastructure.Web

@helper FormatDateTime(DateTime date)
{
	if (date.Year != 1900 && date.Year != 1)
	{
		@date.ToString(Common.DefaultDateFormat)
	}
}

@helper FormatDateTime(DateTime date, string format)
{
	if (date.Year != 1900 && date.Year != 1)
	{
		@date.ToString(format)
	}
}

@helper FormatBoolean(bool isTrue)
{
	@(isTrue ? "Yes" : "No")
}

@helper StatusCSSClass(string status, DateTime dueDate)
{
	if (dueDate < DateTime.Today && !(status == "Paid" || status=="Closed"))
	{
		<text>status-over-due</text>;
	}
	else
	{
		<text>status-@status.Replace(" ", "-").ToLower() </text>;
	}
}

@helper FormatCurrency(float amount, int decimalPlace = 2){
	System.Globalization.CultureInfo _indCulture = new System.Globalization.CultureInfo("hi-IN");
	<text>@string.Format(_indCulture, "{0:n" + decimalPlace.ToString() + "}", amount)</text>
}
