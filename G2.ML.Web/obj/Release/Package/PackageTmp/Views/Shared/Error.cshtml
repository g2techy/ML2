@using EH = G2.Frameworks.MVC.ExceptionHandling;
@model EH.HandleErrorModel

<div class="container">
	<div class="row">
		<div class="col-md-12">
			@if (Model != null)
			{
				<h2>
					Error ID :  @Model.ErrorID (Error Code :  @Model.ErrorNumber)
				</h2>
				<br />
				<p>
					<b>Error Message</b> :  @Model.ErrorMessage
				</p>
				if (EH.ErrorHandlerAttribute.ShowActualError)
				{
					<p>
						<b>Error Trace</b> :  @Model.ErrorTrace
					</p>
				}
			}
		</div>
	</div>
</div>
