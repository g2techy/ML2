@model G2.ML.Web.Models.SaleBrokPaymentVM

<div id="modelBrokPayment" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				Brokerage Payment Details
				<button type="button" class="close" data-dismiss="modal" style="margin-top:-10px">&times;</button>
			</div>
			<div class="modal-body" style="text-align:center;padding:20px;">
				@using (Html.BeginForm("BrokPayment", "Sale", FormMethod.Post, new { @class = "form-horizontal", @id = "frmBrokPayment" }))
				{
					@Html.HiddenFor(m => m.SaleID)
					@Html.HiddenFor(m => m.BDID)
					<div class="form-group">
						@Html.TextBoxFor(m => m.BrokPayDate, new { @class = "form-control input-sm date-picker", @id = "BrokPayDate", @placeholder = "Pay date:" })
					</div>
					<div class="form-group">
						@Html.TextAreaFor(m => m.BrokPayComments, new { @class = "form-control input-sm", @id = "PayComments", @placeholder = "Comments:" })
					</div>
					<div class="form-group" style="text-align:center;">
						<button type="button" id="btnUpdatePayment" class="btn btn-info btn-xs">
							Update
						</button>
					</div>
				}
			</div>
		</div>
	</div>
</div>